<?xml version="1.0" encoding="utf-8"?>
<layout>
<data>
    <import type="android.view.View" />
    <variable
        name="user"
        type="kr.yooreka.practice.domain.model.UserVO" />

    <variable
        name="viewModel"
        type="kr.yooreka.practice.presentation.viewmodel.DetailViewModel" />
</data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.DetailActivity">

    <LinearLayout
        android:id="@+id/loProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/gray"
        android:orientation="horizontal"
        >
        <!--            android:onClick="@{()->viewModel.onProfileClicked(user)}"-->

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivProfile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@android:mipmap/sym_def_app_icon"
            app:imgUrl="@{user.thumbUrl}"
            />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:text="@{user.name}"
            android:textSize="@dimen/header_font_dp_size"
            android:textStyle="bold"
            android:textColor="@color/default_text_color"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRepository"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/loProfile"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_repository"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>